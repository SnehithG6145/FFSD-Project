    <style>
      /* Header */
      header {
        background-color: #333;
        color: #fff;
        padding: 20px 0;
      }
      .header-container {
        width: 80%;
        margin: auto;
        display: flex;
        justify-content: space-between;
        align-items: center;
      }
      .logo {
        font-size: 2rem;
        font-weight: bold;
      }
      nav ul {
        list-style: none;
        display: flex;
      }
      nav ul li {
        margin-left: 20px;
      }
      nav ul li a {
        color: #fff;
        font-size: 1rem;
        transition: color 0.3s ease;
      }
      nav ul li a:hover {
        color: #007BFF;
      }

       /* Modified Footer Styles */
      
       footer {
      background-color: #000000;
      color: #fff;
      padding: 20px 0;
      margin-top: 30px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-wrap: wrap;
    }
    
    .footer-logo {
      font-size: 2rem; /* Bigger CollabSync text */
      font-weight: bold;
      margin-left: 20px;
    }
    
    footer p {
      flex: 1;
      text-align: center;
      margin: 0;
      font-size: 1rem;
    }
    
    .social-media {
      margin-right: 20px;
    }
    
    .social-media a {
      display: inline-block;
      margin: 0 10px;
      transition: transform 0.3s ease;
    }
    
    .social-media img {
      width: 40px;
      height: 40px;
    }
    
    .social-media a:hover {
      transform: scale(1.1);
    }

